<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Information</title>
    <% include partials/links-and-scripts %>
    <script type="text/javascript" src="/js/user.js" defer></script>
  </head>
  <body>
    <div class="container">
      <h3 class="center-align">Update User</h3>
      <form id='update-user-form' class="col" action="/users/<%= user.id %>" method="post">
        <div class="row">
          <div class="input-field col s12 m6">
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" value="<%= user.first_name %>">
          </div>
          <div class="input-field col s12 m6">
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" value="<%= user.last_name %>">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6">
            <label for="user_name">Username</label>
            <input type="text" name="user_name" value="<%= user.user_name %>">
          </div>
          <div class="input-field col s12 m6">
            <label for="email">Email</label>
            <input type="text" name="email" value="<%= user.email %>">
          </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" form="update-user-form">Update User<i class="material-icons right">send</i></button>
      </form>
    </div>
  </body>
</html>
