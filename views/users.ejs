<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>View Users</title>
    <% include partials/links-and-scripts %>
    <script type="text/javascript" src='/js/users.js' defer></script>
  </head>
  <body>
    <div class="container">

      <button class="new-user-button" type="button">New User</button>
      <form id='new-user-form' action="/users" method="post">
        <label for="user_name">Username</label>
        <input type="text" name="user_name">
        <label for="first_name">First Name</label>
        <input type="text" name="first_name">
        <label for="last_name">Last Name</label>
        <input type="text" name="last_name">
        <label for="email">Email</label>
        <input type="text" name="email">
        <button type="submit" form='new-user-form' value="Submit">Add User</button>
      </form>

      <table class='responsive-table striped'>
        <thead>
          <tr>
            <th>id</th>
            <th>username</th>
            <th>first</th>
            <th>last</th>
            <th>email</th>
          </tr>
        </thead>
        <tbody>
          <% for (let u of users) { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.user_name %></td>
              <td><%= u.first_name %></td>
              <td><%= u.last_name %></td>
              <td><%= u.email %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
