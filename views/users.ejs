<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>View Users</title>
    <% include partials/links-and-scripts %>
    <script type="text/javascript" src='/js/users.js' defer></script>
    <link rel="stylesheet" href="/css/users.css">
  </head>
  <body>
    <div class="container">

      <button class="btn waves-effect waves-light new-user-button" type="button">New User</button>
      <form id='new-user-form' action="/users" method="post">
        <div class="row">
          <div class="input-field col s6 m3">
            <label for="user_name">Username</label>
            <input type="text" name="user_name">
          </div>
          <div class="input-field col s6 m3">
            <label for="email">Email</label>
            <input type="text" name="email">
          </div>
          <div class="input-field col s6 m3">
            <label for="first_name">First Name</label>
            <input type="text" name="first_name">
          </div>
          <div class="input-field col s6 m3">
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name">
          </div>
        </div>
        <div class="row">
          <div class="col s12 center-align">
            <button class="btn waves-effect waves-light" type="submit" form='new-user-form'>Add User<i class="material-icons right">add</i></button>
          </div>
        </div>

      </form>

      <table class='responsive-table striped'>
        <thead>
          <tr>
            <th>id</th>
            <th>username</th>
            <th>first</th>
            <th>last</th>
            <th>email</th>
          </tr>
        </thead>
        <tbody>
          <% for (let u of users) { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.user_name %></td>
              <td><%= u.first_name %></td>
              <td><%= u.last_name %></td>
              <td><%= u.email %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </body>
</html>
