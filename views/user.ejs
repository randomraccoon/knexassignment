<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Information</title>
    <% include partials/links-and-scripts %>
    <script type="text/javascript" src="/js/user.js" defer></script>
  </head>
  <body>
    <div class="container">
      <h3 class="center-align">Display User</h3>

      <div class="row">
        <div class="col s12 m6 offset-m3">
          <div class="card-panel">
            <div class="card-content">
              <table class="striped">
                <tr>
                  <th>First Name</th>
                  <td><%= user.first_name %></td>
                </tr>
                <tr>
                  <th>Last Name</th>
                  <td><%= user.last_name %></td>
                </tr>
                <tr>
                  <th>Username</th>
                  <td><%= user.user_name %></td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td><%= user.email %></td>
                </tr>
              </table>
            </div>
            <div class="card-action row">
              <div class="col s6">
                <button class="btn red">Delete</button>
              </div>
              <div class="col s6">
                <button class="btn">Update</button>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
